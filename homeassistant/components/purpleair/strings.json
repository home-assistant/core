        }
      },
      "select_sensor": {
        "description": "[%key:component::purpleair::config::step::select_sensor::description%]",
        "data": {
          "sensor_index": "[%key:component::purpleair::config::step::select_sensor::data::sensor_index%]"
        }
      },
      "remove_sensor": {
        "description": "Remove registered sensor",

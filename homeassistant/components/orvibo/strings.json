{
    "issues": {
        "yaml_deprecation": {
            "title": "Legacy YAML configuration detected for Orvibo",
            "description": "This device (Name: {name}, MAC: {mac}, Host: {host}) is still configured via YAML. The Orvibo integration now supports UI-based configuration. Please remove the YAML block from configuration.yaml to avoid duplicate setup and future issues."
        }
    },
    "config": {
        "progress": {
            "title": "Orvibo S20",
            "start_discovery": "Attempting to discover new S20 switches\n\nThis will take about 5-10 seconds"
        },
        "flow_title": "{host}",
        "error": {
            "invalid_mac": "Invalid MAC address format"
        },
        "abort": {
            "already_configured": "[%key:common::config_flow::abort::already_configured_device%]",
            "already_in_progress": "[%key:common::config_flow::abort::already_in_progress%]"
        },
        "step": {
            "user": {
                "title": "Orvibo S20 Configuration",
                "menu_options": {
                    "start_discovery": "Discover new S20 Switches",
                    "edit": "Enter configuration manually"
                }
            },
            "edit": {
                "title": "Edit Orvibo S20 Configuration",
                "data": {
                    "host": "[%key:common::config_flow::data::host%]",
                    "name": "[%key:common::config_flow::data::name%]",
                    "mac": "[%key:common::config_flow::data::mac%]"
                }
            },
            "choose_switch": {
                "title": "Discovered Switches",
                "data": {
                    "switches": "Choose discovered switch to configure"
                }
            },
            "discovery_failed": {
                "title": "Discovery failed",
                "description": "No S20 switches were discovered on the network.",
                "menu_options": {
                    "edit": "Enter configuration manually"
                }
            },
            "edit_discovered": {
                "title": "Edit additional connection information",
                "description": "S20 Host: {host}, MAC {mac}",
                "data": {
                    "name": "[%key:common::config_flow::data::name%]"
                }
            }
        }
    }
}

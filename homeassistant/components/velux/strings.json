{
  "config": {
    "step": {
      "user": {
        "data": {
          "host": "[%key:common::config_flow::data::host%]",
          "password": "[%key:common::config_flow::data::password%]"
        }
      },
      "discovery_confirm": {
        "description": "Please enter the password for {name} ({host})",
        "data": {
          "password": "[%key:common::config_flow::data::password%]"
        }
      }
    },
    "error": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "unknown": "[%key:common::config_flow::error::unknown%]"
    },
    "abort": {
      "already_configured": "[%key:common::config_flow::abort::already_configured_device%]"
    }
  },
  "services": {
    "reboot_gateway": {
      "name": "Reboot gateway",
      "description": "Reboots the KLF200 Gateway."
    }
  },
  "entity": {
    "binary_sensor": {
      "rain_sensor": {
        "name": "Rain sensor"
      }
    },
    "cover": {
      "window": {
        "name": "[%key:component::cover::entity_component::window::name%]"
      },
      "awning": {
        "name": "[%key:component::cover::entity_component::awning::name%]"
      },
      "blind": {
        "name": "[%key:component::cover::entity_component::blind::name%]"
      },
      "garage": {
        "name": "[%key:component::cover::entity_component::garage::name%]"
      },
      "gate": {
        "name": "[%key:component::cover::entity_component::gate::name%]"
      },
      "shutter": {
        "name": "[%key:component::cover::entity_component::shutter::name%]"
      }
    }
  }
}

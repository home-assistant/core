# Open a docker that can be used to debug/dev python-openzwave
# Pass in a command line argument to build

cd "$(dirname "$0")/.."

if [ $# -gt 0 ]
then
    docker build -t home-assistant-dev .
fi

docker run \
    --device=/dev/ttyUSB0:/zwaveusbstick:rwm \
    -v `pwd`:/usr/src/app \
    -p 8123:8123 \
    -t -i home-assistant-dev \
    /bin/bash
